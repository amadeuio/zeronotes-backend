{
  "name": "zeronotes-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "migrate": "ts-node db/run.ts migrate",
    "seed": "ts-node db/run.ts seed",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "check": "tsc --noEmit",
    "test": "cd api-tests && ./demo.sh",
    "test:auth": "cd api-tests && ./test-auth-success.sh && ./test-auth-failures.sh",
    "test:zod": "cd api-tests && ./test-zod-validation.sh",
    "test:all": "npm run test && npm run test:auth && npm run test:zod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amadeuio/zeronotes-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/amadeuio/zeronotes-backend/issues"
  },
  "homepage": "https://github.com/amadeuio/zeronotes-backend#readme",
  "dependencies": {
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jose": "^6.1.2",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
